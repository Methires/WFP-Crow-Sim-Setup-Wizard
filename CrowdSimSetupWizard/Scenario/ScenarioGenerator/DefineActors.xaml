<Window x:Class="CrowdSimSetupWizard.DefineActors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CrowdSimSetupWizard"
        mc:Ignorable="d"
        Title="Action actors" Height="110" Width="190" Background="#ececec" ResizeMode="NoResize">
    <Grid>
        <xctk:IntegerUpDown x:Name="Actor_Number_Picker" Margin="120,10,10,36" DefaultValue="1" Minimum="1" DisplayDefaultValueOnEmptyText="True" MouseWheelActiveOnFocus="False" ValueChanged="Actor_Number_Picker_ValueChanged"/>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="Cancel_Button_Click"/>
        <Button x:Name="Next_Button" Content="Next" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Next_Button_Click"/>
        <TextBlock x:Name="Number_TextBlock" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Number of actors:" VerticalAlignment="Top" Width="105"/>
    </Grid>
</Window>
