<Window x:Class="CrowdSimSetupWizard.ChooseActorsForAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrowdSimSetupWizard"
        mc:Ignorable="d"
        Title="Choose actors" Height="Auto" Width="Auto" ResizeMode="CanMinimize" Background="#ececec" SizeToContent="WidthAndHeight">
    <Grid Width="185" Height="225">
        <TextBlock x:Name="Choose_Actors_TextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Choose actors for action:" VerticalAlignment="Top"/>
        <ScrollViewer HorizontalAlignment="Left" Height="160" VerticalAlignment="Top" Width="165" Margin="10,31,0,0">
            <ListView x:Name="actors_listView">
            </ListView>
        </ScrollViewer>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" Margin="10,196,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Button_Click"/>
        <Button x:Name="Next_Button" Content="Next" HorizontalAlignment="Left" Margin="100,196,0,0" VerticalAlignment="Top" Width="75" Click="Next_Button_Click"/>
    </Grid>
</Window>
